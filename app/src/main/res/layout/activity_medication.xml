<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.medication.MedicationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.TiredTasks.AppBarOverlay"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicationRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"

        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/medicationRecyclerView"
        android:layout_alignBottom="@id/medicationRecyclerView"
        android:layout_alignParentBottom="false"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="75dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="6dp"
        android:src="@drawable/ic_action_name" />

</RelativeLayout>